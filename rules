rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /news/{post} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth.uid == resource.data.authorUID;
    }
    match /users/{userId} {
      allow read: if true;
      allow create, update: if request.auth.uid == userId;
    }
  }
}